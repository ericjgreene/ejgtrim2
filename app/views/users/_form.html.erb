
<div class="outerbackground">

<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group col-12">
    <%= f.text_field :name, :placeholder => 'FULL NAME', :class => 'form-control trimfield' %>
  </div>

  <div class="field form-group col-12">
    <%= f.text_field :email, :placeholder => 'EMAIL', :class => 'form-control trimfield' %>
  </div>

  <div class="field form-group col-12">
    <%= f.text_field :projectrepo, :placeholder => 'PROJECT REPO', :class => 'form-control trimfield' %>
  </div>

  <div class="field form-group col-12">
    <%= f.text_field :projecturl, :placeholder => 'PROJECT URL', :class => 'form-control trimfield' %>
  </div>

  <div class="field form-group row">
    <%= f.number_field :ubpfo, :placeholder => 'USING BEST PRACTICES FOR OPP', :class => 'form-control trimfield' %>
  </div>

  <div class="field form-group row">
    <%= f.number_field :md, :placeholder => 'MODULAR DEVELOPMENT', :class => 'form-control trimfield' %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary col-12 trimsubmit" id="SUBMIT"> <%= f.submit %> </button>
  </div>
<% end %>

</div>
